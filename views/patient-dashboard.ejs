<!-- header -->
<%- include('header', {cssFilePath: '/patient-dashboard.css'}); %>

<a class="btn btn-primary" href="/clinics" role="button">new consult</a>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Patient Dashboard</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h2><a href="/consultations/ongoing">ongoing consultations</a></h2>
      <% consultations.forEach((consultation) => { %>
        <% if (consultation.status === 'ongoing') { %>
          <p><a class="badge badge-light" href="/consultation/<%= consultation.id %>">consultation <%= consultation.id %> doctor: <%= consultation.doctor_name %></a></p>
        <% } %> 
      <% }); %> 
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h2><a href="/consultations/requested">requested consultations</a></h2>
      <% consultations.forEach((consultation) => { %>
        <% if (consultation.status === 'requested') { %>
          <p><a class="badge badge-light" href="/consultation/<%= consultation.id %>">consultation <%= consultation.id %> doctor: <%= consultation.doctor_name %></a></p>
        <% } %> 
      <% }); %> 
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h2><a href="/consultations/upcoming">upcoming consultations</a></h2>
      <% consultations.forEach((consultation) => { %>
        <% if (consultation.status === 'upcoming') { %>
          <p><a class="badge badge-light" href="/consultation/<%= consultation.id %>">consultation <%= consultation.id %> doctor: <%= consultation.doctor_name %></a></p>
        <% } %> 
      <% }); %> 
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h2><a href="/consultations/ended">past consultations</a></h2>
      <% consultations.forEach((consultation) => { %>
        <% if (consultation.status === 'ended') { %>
          <p><a class="badge badge-light" href="/consultation/<%= consultation.id %>">consultation <%= consultation.id %> doctor: <%= consultation.doctor_name %></a></p>
        <% } %> 
      <% }); %> 
    </div>
  </div>
</div>

<!-- footer -->
<%- include('footer'); %>
