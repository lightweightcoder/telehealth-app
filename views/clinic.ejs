<!-- header -->
<%- include('header', {cssFilePath: '/clinic.css'}); %>

<!-- section with clinic name and clinic photo as background image -->
<div class="row" id="clinic-row" style="background-image: linear-gradient(rgba(124, 89, 89, 0.5), rgba(0, 0, 0, 0.5)), url('/clinics/<%= clinic.photo %>');">
  <div class="col-12 d-flex justify-content-center">
    <div class="row align-self-center">
      <div class="col-12 d-flex justify-content-center">
          <span id="clinic-name"><%= clinic.name %></span>
      </div>
    </div>
  </div>
</div>

<!-- section with doctor names -->
<div class="container">
  <div class="row">
    <div class="col-12">
      <h6 id="select-doctor-heading">Select a Doctor</h6>
    </div>
  </div>
</div>

<div class="container-lg">
  <div class="row">
    <div class="col-12">
      <!-- set max height of the container storing the doctors' info -->
      <div class="container doctors-list-container overflow-auto">
        <div class="row">
          <!-- information of each doctor -->
          <% doctors.forEach((doctor) => { %>
            <!-- do not show that doctor if he is the one making the request -->
            <% if (doctor.id !== user.id) { %> 
              <div class="col-12 col-md-6 col-lg-4">            
                <a class="doctor-anchor" href="/new-consultation/<%= clinic.name %>/<%= doctor.id %>">
                  <div class="container border border-info rounded doctor-container">
                    <div class="row">
                      <div class="col-4 d-flex align-items-center">
                        <img class="rounded-circle border border-secondary img-fluid doctor-photo" src="/profile-photos/<%= doctor.photo %>"/>
                      </div>
                      <div class="col-8 d-flex align-items-center">
                        <p>
                          Dr <%= doctor.name %>
                        </p>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
            <% }; %>
          <% }); %> 
        </div>
      </div>      
    </div>
  </div>
</div>

<!-- footer -->
<%- include('footer'); %>
